root = true

# General configuration for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 140
trim_trailing_whitespace = true

[*.java]
curly_bracket_next_line = false
continuation_indent_size = 4

[*.md]
trim_trailing_whitespace = false
