    <dependency>
      <groupId>org.graalvm.js</groupId>
      <artifactId>js-scriptengine</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.operaton.bpm.model</groupId>
      <artifactId>operaton-bpmn-model</artifactId>
