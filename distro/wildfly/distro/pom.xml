<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.operaton.bpm.wildfly</groupId>
    <artifactId>operaton-wildfly</artifactId>
    <version>1.0.0-beta-3-SNAPSHOT</version>
  </parent>

  <artifactId>operaton-bpm-wildfly</artifactId>
  <packaging>pom</packaging>

  <name>Operaton - Wildfly Distro</name>

  <dependencies>
    <dependency>
      <!-- this dependency is to make sure that we are executed after the
        integration tests have passed in the reactor -->
      <groupId>org.operaton.bpm.qa</groupId>
      <artifactId>operaton-qa</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.operaton.bpm.wildfly</groupId>
      <artifactId>operaton-wildfly-assembly</artifactId>
      <version>${project.version}</version>
      <type>tar.gz</type>
    </dependency>

    <dependency>
      <groupId>org.operaton.bpm.distro</groupId>
      <artifactId>operaton-sql-scripts</artifactId>
      <version>${project.version}</version>
      <type>jar</type>
    </dependency>

    <dependency>
      <groupId>org.operaton.bpm</groupId>
      <artifactId>operaton-engine-rest-jakarta</artifactId>
      <version>${project.version}</version>
      <classifier>wildfly</classifier>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>org.operaton.bpm.webapp</groupId>
      <artifactId>operaton-webapp-wildfly</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>org.operaton.bpm.example</groupId>
      <artifactId>operaton-example-invoice-jakarta</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>distro</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly.xml</descriptor>
              </descriptors>
              <finalName>operaton-bpm-wildfly-${project.version}</finalName>
              <attach>true</attach>
              <appendAssemblyId>false</appendAssemblyId>
              <outputDirectory>target/</outputDirectory>
              <workDirectory>target/assembly/work</workDirectory>
              <tarLongFileMode>gnu</tarLongFileMode>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <description>${project.name}</description>
</project>
