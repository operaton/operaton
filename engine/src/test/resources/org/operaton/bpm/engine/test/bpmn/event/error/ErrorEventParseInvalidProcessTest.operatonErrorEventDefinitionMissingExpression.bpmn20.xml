                  id="Definitions_1"
                  targetNamespace="http://bpmn.io/schema/bpmn">

  <bpmn:error id="Error_1" name="Error" errorCode="errorCode" />

  <bpmn:process id="invalidOperatonErrorEventDefinitionProcess" isExecutable="true">
    <bpmn:startEvent id="start">
      <bpmn:outgoing>flow1</bpmn:outgoing>
    </bpmn:startEvent>
    <bpmn:sequenceFlow id="flow1" sourceRef="start" targetRef="externalTask" />
    <bpmn:serviceTask id="externalTask" operaton:type="external" operaton:topic="testTopic">
