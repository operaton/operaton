<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:operaton="http://operaton.org/schema/1.0/bpmn" 
  targetNamespace="Examples">

  <signal id="alertSignal" name="alert" />

  <process id="catchSignal" isExecutable="true" operaton:historyTimeToLive="P180D">

    <startEvent id="start" />

    <sequenceFlow sourceRef="start" targetRef="task" />

    <userTask id="task" operaton:assignee="kermit" />     
    
    <boundaryEvent id="boundary" attachedToRef="task" cancelActivity="true">       
          <signalEventDefinition signalRef="alertSignal"/>
    </boundaryEvent>

    <sequenceFlow sourceRef="task" targetRef="end" />
    <sequenceFlow sourceRef="boundary" targetRef="serviceTask" />

    <serviceTask id="serviceTask" operaton:delegateExpression="#{signalReceivedDelegate}"/>
    <sequenceFlow sourceRef="serviceTask" targetRef="receiveTask" />
    
    <receiveTask id="receiveTask" />
    <sequenceFlow sourceRef="receiveTask" targetRef="end" />

    <endEvent id="end" />

  </process>
</definitions>
