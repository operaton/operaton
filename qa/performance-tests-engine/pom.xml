<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.operaton.bpm.qa</groupId>
    <artifactId>operaton-qa</artifactId>
    <version>1.0.0-beta-5-SNAPSHOT</version>
  </parent>
  <artifactId>operaton-qa-performance-tests-engine</artifactId>
  <packaging>jar</packaging>
  <name>Operaton - QA Performance Tests Engine</name>

  <description>${project.name}</description>

  <properties>
    <historyLevel>full</historyLevel>
    <jdbcBatchProcessing>true</jdbcBatchProcessing>
    <!-- without a special test profile we don't want to exclude anything, this expressions should never match -->
    <test.excludes>$.</test.excludes>
    <test.includes/>
  </properties>

  <dependencies>

    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.uuid</groupId>
      <artifactId>java-uuid-generator</artifactId>
    </dependency>

    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-jdbc</artifactId>
      <version>7.0.33</version>
    </dependency>

    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-juli</artifactId>
      <version>7.0.33</version>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-params</artifactId>
    </dependency>
    <dependency>
      <groupId>org.operaton.bpm</groupId>
      <artifactId>operaton-engine</artifactId>
    </dependency>
    <dependency>
      <groupId>org.operaton.bpm</groupId>
      <artifactId>operaton-engine</artifactId>
      <classifier>junit5</classifier>
    </dependency>

  </dependencies>

  <profiles>

    <!-- distro profile skips tests -->
    <profile>
      <id>distro</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <skipTests>true</skipTests>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>shade</goal>
                </goals>
                <phase>package</phase>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- the benchmark performs multiple runs of the same process on multiple threads. -->
    <profile>
      <id>benchmark</id>

      <properties>
        <numberOfRuns>100</numberOfRuns>
        <!-- default values for properties -->
        <numberOfThreads>2</numberOfThreads>
        <processEnginePlugins/>
        <test.excludes>query</test.excludes>
        <testWatchers/>
        <watchActivities/>
      </properties>

      <build>
        <testResources>
          <testResource>
            <filtering>true</filtering>
            <directory>src/test/resources</directory>
          </testResource>
        </testResources>

        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <runOrder>alphabetical</runOrder>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <includes>
                <include>%regex[.*(${test.includes}).*Test.*.class]</include>
              </includes>
              <excludes>
                <exclude>**/*TestCase.java</exclude>
                <exclude>%regex[.*(${test.excludes}).*Test.*.class]</exclude>
              </excludes>
            </configuration>
          </plugin>

          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>database-test-drop-schema</id>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>prepare-package</phase>
                <configuration>
                  <tasks>
                    <echo message="Generating reports"/>
                    <copy flatten="true" todir="${basedir}/target/reports/images">
                      <fileset dir="${basedir}/src/test/resources">
                        <include name="**/*.png"/>
                      </fileset>
                    </copy>
                    <java classname="org.operaton.bpm.qa.performance.engine.benchmark.BenchmarkReport" classpathref="maven.test.classpath"/>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>

      </build>

    </profile>

    <!-- the benchmark performs multiple runs of the same process on multiple threads. -->
    <profile>
      <id>single-run</id>

      <properties>
        <numberOfRuns>1</numberOfRuns>
        <!-- default values for properties -->
        <numberOfThreads>1</numberOfThreads>
        <processEnginePlugins/>
        <test.excludes>query</test.excludes>
        <testWatchers/>
        <watchActivities/>
      </properties>

      <build>
        <testResources>
          <testResource>
            <filtering>true</filtering>
            <directory>src/test/resources</directory>
          </testResource>
        </testResources>

        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <includes>
                <include>%regex[.*(${test.includes}).*Test.*.class]</include>
              </includes>
              <excludes>
                <exclude>**/*TestCase.java</exclude>
                <exclude>%regex[.*(${test.excludes}).*Test.*.class]</exclude>
              </excludes>
            </configuration>
          </plugin>

          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>database-test-drop-schema</id>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>prepare-package</phase>
                <configuration>
                  <tasks>
                    <echo message="Generating reports"/>
                    <copy flatten="true" todir="${basedir}/target/reports/images">
                      <fileset dir="${basedir}/src/test/resources">
                        <include name="**/*.png"/>
                      </fileset>
                    </copy>
                    <java classname="org.operaton.bpm.qa.performance.engine.benchmark.BenchmarkReport" classpathref="maven.test.classpath"/>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>

      </build>

    </profile>

    <!-- Allows to log the process engine's interaction with the database -->
    <profile>
      <id>sql-statementlog</id>

      <properties>
        <numberOfRuns>1</numberOfRuns>
        <numberOfThreads>1</numberOfThreads>
        <processEnginePlugins>org.operaton.bpm.qa.performance.engine.sqlstatementlog.StatementLogProcessEnginePlugin</processEnginePlugins>
        <test.excludes>query</test.excludes>
        <testWatchers>org.operaton.bpm.qa.performance.engine.sqlstatementlog.StatementLogPerfTestWatcher</testWatchers>
        <watchActivities/>
      </properties>

      <build>
        <testResources>
          <testResource>
            <filtering>true</filtering>
            <directory>src/test/resources</directory>
          </testResource>
        </testResources>

        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <includes>
                <include>%regex[.*(${test.includes}).*Test.*.class]</include>
              </includes>
              <excludes>
                <exclude>**/*TestCase.java</exclude>
                <exclude>%regex[.*(${test.excludes}).*Test.*.class]</exclude>
              </excludes>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>database-test-drop-schema</id>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>prepare-package</phase>
                <configuration>
                  <tasks>
                    <echo message="Generating reports in ${basedir}/target/reports/"/>
                    <copy flatten="true" todir="${basedir}/target/reports/images">
                      <fileset dir="${basedir}/src/test/resources">
                        <include name="**/*.png"/>
                      </fileset>
                    </copy>
                    <java classname="org.operaton.bpm.qa.performance.engine.sqlstatementlog.SqlStatementLogReport" classpathref="maven.test.classpath"/>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>

      </build>

    </profile>

    <profile>
      <id>generate-load</id>

      <properties>
        <loadGenerator.colorOutput>false</loadGenerator.colorOutput>
        <loadGenerator.numberOfIterations>10000</loadGenerator.numberOfIterations>
        <processEnginePlugins/>
        <skip.tests>true</skip.tests>
        <testWatchers/>
        <watchActivities/>
      </properties>

      <build>
        <testResources>
          <testResource>
            <filtering>true</filtering>
            <directory>src/test/resources</directory>
          </testResource>
        </testResources>

        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate load</id>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>process-test-classes</phase>
                <configuration>
                  <tasks>
                    <echo message="Generating load"/>
                    <java classname="org.operaton.bpm.qa.performance.engine.query.DefaultLoadGenerator" classpathref="maven.test.classpath" failonerror="true"/>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <skipTests>${skip.tests}</skipTests>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>query-perf-test</id>

      <properties>
        <numberOfRuns>1</numberOfRuns>
        <numberOfThreads>1</numberOfThreads>
        <processEnginePlugins>org.operaton.bpm.qa.performance.engine.sqlstatementlog.StatementLogProcessEnginePlugin</processEnginePlugins>
        <skip.tests>false</skip.tests>
        <test.includes>query</test.includes>
        <testWatchers>org.operaton.bpm.qa.performance.engine.sqlstatementlog.StatementLogPerfTestWatcher</testWatchers>
        <watchActivities/>
      </properties>

      <build>
        <testResources>
          <testResource>
            <filtering>true</filtering>
            <directory>src/test/resources</directory>
          </testResource>
        </testResources>

        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <includes>
                <include>%regex[.*(${test.includes}).*Test.*.class]</include>
              </includes>
              <excludes>
                <exclude>**/*TestCase.java</exclude>
                <exclude>%regex[.*(${test.excludes}).*Test.*.class]</exclude>
              </excludes>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>database-test-drop-schema</id>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>prepare-package</phase>
                <configuration>
                  <tasks>
                    <echo message="Generating reports in ${basedir}/target/reports/"/>
                    <copy flatten="true" todir="${basedir}/target/reports/images">
                      <fileset dir="${basedir}/src/test/resources">
                        <include name="**/*.png"/>
                      </fileset>
                    </copy>
                    <java classname="org.operaton.bpm.qa.performance.engine.sqlstatementlog.SqlStatementLogReport" classpathref="maven.test.classpath"/>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>

      </build>

    </profile>

    <!-- allows to log activity start/end counts -->
    <profile>
      <id>activity-count</id>

      <properties>
        <numberOfRuns>100</numberOfRuns>
        <!-- default values for properties -->
        <numberOfThreads>1</numberOfThreads>
        <processEnginePlugins/>
        <testWatchers/>
        <watchActivities/>
      </properties>

      <build>
        <testResources>
          <testResource>
            <filtering>true</filtering>
            <directory>src/test/resources</directory>
          </testResource>
        </testResources>

        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <includes>
                <include>%regex[.*(${test.includes}).*Test.*.class]</include>
              </includes>
              <excludes>
                <exclude>**/*TestCase.java</exclude>
                <exclude>%regex[.*(${test.excludes}).*Test.*.class]</exclude>
              </excludes>
            </configuration>
          </plugin>

          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-report</id>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>prepare-package</phase>
                <configuration>
                  <tasks>
                    <echo message="Generating reports"/>
                    <copy flatten="true" todir="${basedir}/target/reports/images">
                      <fileset dir="${basedir}/src/test/resources">
                        <include name="**/*.png"/>
                      </fileset>
                    </copy>
                    <java classname="org.operaton.bpm.qa.performance.engine.framework.activitylog.ActivityCountReporter" classpathref="maven.test.classpath"/>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>

      </build>

    </profile>

    <!-- override h2 profile to use in-mem db -->
    <profile>
      <id>h2</id>
      <properties>
        <database.datasource.class>org.h2.jdbcx.JdbcDataSource</database.datasource.class>
        <database.driver>org.h2.Driver</database.driver>
        <database.password>sa</database.password>
        <database.type>h2</database.type>
        <database.url>jdbc:h2:mem:performance-test</database.url>
        <database.username>sa</database.username>
      </properties>
    </profile>

    <profile>
      <id>history-level-none</id>
      <properties>
        <historyLevel>none</historyLevel>
      </properties>
    </profile>

    <profile>
      <id>history-level-full</id>
      <properties>
        <historyLevel>full</historyLevel>
      </properties>
    </profile>

    <profile>
      <id>cfgJdbcBatchProcessingOff</id>
      <properties>
        <jdbcBatchProcessing>false</jdbcBatchProcessing>
      </properties>
    </profile>

    <!-- test profiles -->
    <profile>
      <id>testBpmn</id>
      <properties>
        <test.includes>bpmn</test.includes>
      </properties>
    </profile>
    <profile>
      <id>testDmn</id>
      <properties>
        <test.includes>dmn</test.includes>
      </properties>
    </profile>

  </profiles>
</project>
