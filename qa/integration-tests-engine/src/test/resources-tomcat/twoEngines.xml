<?xml version="1.0" encoding="UTF-8"?>
<process-application
  xmlns="http://www.operaton.org/schema/1.0/ProcessApplication"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.operaton.org/schema/1.0/ProcessApplication https://www.operaton.org/schema/1.0/ProcessApplication ">

  <process-engine name="engine2">
    <job-acquisition>default</job-acquisition>
    <configuration>org.operaton.bpm.engine.impl.cfg.StandaloneProcessEngineConfiguration</configuration>
    <properties>
      <property name="history">full</property>
      <property name="databaseType">h2</property>
      <property name="databaseSchemaUpdate">create-drop</property>
      <property name="jdbcUrl">jdbc:h2:mem:engine2</property>
    </properties>
  </process-engine>

  <process-engine name="engine3">
    <job-acquisition>default</job-acquisition>
    <configuration>org.operaton.bpm.engine.impl.cfg.StandaloneProcessEngineConfiguration</configuration>
    <properties>
      <property name="history">full</property>
      <property name="databaseType">h2</property>
      <property name="databaseSchemaUpdate">create-drop</property>
      <property name="jdbcUrl">jdbc:h2:mem:engine3</property>
    </properties>
  </process-engine>

</process-application>