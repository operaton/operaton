    </bpmn:serviceTask>
    <bpmn:sequenceFlow id="flow2" sourceRef="externalTask" targetRef="end" />
    <bpmn:endEvent id="end">
      <bpmn:incoming>flow2</bpmn:incoming>
    </bpmn:endEvent>
