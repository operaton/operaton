<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration" class="org.operaton.bpm.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">

    <property name="processEngineName" value="LdapEnableSortControlSupportTest-engine" />

    <property name="jdbcUrl" value="jdbc:h2:mem:LdapEnableSortControlSupportTest;DB_CLOSE_DELAY=1000" />
    <property name="jdbcDriver" value="org.h2.Driver" />
    <property name="jdbcUsername" value="sa" />
    <property name="jdbcPassword" value="" />

    <!-- Database configurations -->
    <property name="history" value="audit" />
    <property name="databaseSchemaUpdate" value="create-drop" />

    <!-- job executor configurations -->
    <property name="jobExecutorActivate" value="false" />

    <property name="createDiagramOnDeploy" value="true" />
    <property name="enforceHistoryTimeToLive" value="false" />

    <property name="processEnginePlugins">
      <list>
        <ref bean="ldapIdentityProviderPlugin" />
      </list>
    </property>

  </bean>

  <bean id="ldapIdentityProviderPlugin" class="org.operaton.bpm.identity.impl.ldap.plugin.LdapIdentityProviderPlugin">
    <!-- The LDAP credentials will be injected via the extension at runtime -->
    <property name="userSearchBase" value="" />
    <property name="userSearchFilter" value="(objectclass=person)" />
    <property name="userIdAttribute" value="sortableUserIdAlias" />
    <property name="userFirstnameAttribute" value="firstnameAlias" />
    <property name="userLastnameAttribute" value="lastnameAlias" />
    <property name="userEmailAttribute" value="sortableMailAlias" />
    <property name="userPasswordAttribute" value="userpassword" />

    <property name="groupSearchBase" value="" />
    <property name="groupSearchFilter" value="(objectclass=groupOfNames)" />
    <property name="groupIdAttribute" value="sortableGroupIdAlias" />
    <property name="groupNameAttribute" value="sortableGroupNameAlias" />
    <property name="groupMemberAttribute" value="member" />
    <property name="allowAnonymousLogin" value="true" />

    <property name="sortControlSupported" value="true" />

  </bean>

</beans>
