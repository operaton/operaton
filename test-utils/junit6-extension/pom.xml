<?xml version='1.0' encoding='UTF-8'?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.operaton.bpm</groupId>
    <artifactId>operaton-database-settings</artifactId>
    <relativePath>../../database</relativePath>
    <version>1.1.0-SNAPSHOT</version>
  </parent>
  <artifactId>operaton-bpm-junit6</artifactId>
  <name>Operaton - JUnit 6 Extension</name>
  <description>${project.name}</description>
  <dependencies>
    <!-- Include the junit5-extension as a dependency -->
    <dependency>
      <groupId>org.operaton.bpm</groupId>
      <artifactId>operaton-bpm-junit5</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <!-- Unpack the junit5-extension jar and repackage it with junit6 artifact name.
           Note: JUnit 6 doesn't exist as a separate version; this artifact provides the same
           JUnit 5-compatible functionality under a different artifactId for clarity. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-junit5</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.operaton.bpm</includeGroupIds>
              <includeArtifactIds>operaton-bpm-junit5</includeArtifactIds>
              <outputDirectory>${project.build.directory}/classes</outputDirectory>
              <excludes>META-INF/MANIFEST.MF</excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Skip the default jar creation since we're repackaging -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <skipIfEmpty>false</skipIfEmpty>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
