<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
	xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
	xmlns:operaton="http://operaton.org/schema/1.0/bpmn"
	xmlns:fox="http://www.operaton.com/fox"
	targetNamespace="Examples">

	<process id="failedStartTimerEvent" isExecutable="true">

		<startEvent id="theStart">
			<extensionElements>
	       		<fox:failedJobRetryTimeCycle>R5/PT5M</fox:failedJobRetryTimeCycle>
	       	</extensionElements>
 	       	<timerEventDefinition id="failingTimer">
                <timeCycle>0 0/5 * * * ?</timeCycle>
            </timerEventDefinition>
		</startEvent>

		<sequenceFlow id="flow1" sourceRef="theStart" targetRef="failingServiceTask" />
		
		<serviceTask id="failingServiceTask" operaton:class="org.operaton.bpm.engine.test.cmd.FailingDelegate" />
        
		<sequenceFlow id="flow2" sourceRef="failingServiceTask" targetRef="theEnd" />
		
		<endEvent id="theEnd" />

	</process>

</definitions>