            </configuration>
            <executions>
              <execution>
                <id>copy-filtered-main-resources</id>
                <goals>
                  <goal>resources</goal>
                </goals>
                <phase>prepare-package</phase>
                <configuration>
                  <overwrite>true</overwrite>
